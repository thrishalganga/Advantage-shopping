public void validateFilterResponse() {
        APIFormation apiFormation = apiCaller.getApiFormation();
        String filterType = GlobalCache.getScenarioValue("Filter").toString();

        if (apiFormation != null) {
            List<Map<String, Object>> componentsInfo = apiFormation.getComponentsInfo();

            for (Map<String, Object> component : componentsInfo) {
                if (component.containsKey("data")) {
                    Map<String, Object> data = (Map<String, Object>) component.get("data");

                    // Perform validation based on the filter type
                    switch (filterType) {
                        case "genre":
                            validateGenreFilter(data);
                            break;
                        case "forrent":
                            validateForRentFilter(data);
                            break;
                        // Add cases for other filter types as needed
                        default:
                            // Handle other filter types if necessary
                    }
                }
            }
        } else {
            System.out.println("APIFormation is null. Unable to validate the filter response.");
        }
    }

    private void validateGenreFilter(Map<String, Object> data) {
        // Extract and validate the "genre" field from the data
        if (data.containsKey("genre")) {
            List<String> genres = (List<String>) data.get("genre");
            
            // Perform your validation logic here
            // For example, check if genres contains the expected values
            
            System.out.println("Validating genre filter: " + genres);
        } else {
            System.out.println("Genre field not found in data.");
        }
    }
